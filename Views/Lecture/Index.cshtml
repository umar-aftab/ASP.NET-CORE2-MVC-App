@model ShBazmool.ViewModels.LectureViewModel
@{
    Layout = "_Layout";
}

<br />
<article class="audio">
    <table class="table-bordered">
        <tr><th colspan="7"> المحاضرات العلمية <img src="~/img/microphone.png" class="th-img" /></th></tr>

        @foreach (var item in Model.Audios)
        {

            <tr><td><img src="~/img/download.png" /></td><td><a href="@Url.Action("Listen", "Lecture", new { id = item.ID })"><img src="~/img/play.png" /></a></td><td><img src="~/img/share.png" /></td> <td>@item.Date.ToShortDateString()<img src="~/img/clock.png" /></td> <td> 55 <img src="~/img/eye.png" /></td> <td>@item.Title</td><td><a href="@Url.Action("Listen", "Audio", new { id = item.ID })"><img src="~/img/sound.png" /></a></td></tr>

        }
    </table>
        <ul class="pagination">
            @if (Model.PagerView.EndPage > 1)
            {

                <li>
                    <a href="~/Audio/Index">First</a>
                </li>
                <li>
                    <a href="~/Audio/Index?page=@(Model.PagerView.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for(var page = Model.PagerView.StartPage; page <= Model.PagerView.EndPage; page++)
            {
                <li class="@(page == Model.PagerView.CurrentPage ? "active" : "")">
                    <a href="~/Audio/Index?page=@(page)">@(page)</a>
                </li>

            }
            @if(Model.PagerView.CurrentPage < Model.PagerView.TotalPages)
            {
                <li>
                    <a href="~/Home/Index?page=@(Model.PagerView.CurrentPage + 1)">Next</a>

                </li>
                <li>
                    <a href="~/Home/Index?page=@(Model.PagerView.TotalPages)">Last</a>

                </li>

            }
        </ul>
    
</article>
