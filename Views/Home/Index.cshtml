        <table class="table-bordered">
            <tr><th colspan="7">  جديد الكتب <img src="~/img/register.png" class="th-img" /></th></tr>
            @foreach (var item in Model.WritingViews.Books)
            {

                <tr><td><img src="~/img/download.png" /></td><td><a href="@Url.Action("Read","Writing", new { id = item.ID})"><img src="~/img/openBook.png" /></a></td><td><img src="~/img/share.png" /></td> <td>@item.Category<img src="~/img/register.png" /></td> <td><a href="@Url.Action("Read","Writing", new { id = item.ID})"> @item.Title </a></td><td><a href="@Url.Action("Read","Writing", new { id = item.ID})"><img src="~/img/pen.png" /></a></td></tr>

            }
        </table>
    </article>
